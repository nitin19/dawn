<div class="custom-section">

  {% if section.settings.mycheckboxid %}
  <centerr><p>{{ section.settings.mysectionid }}</p></centerr>
  {% endif %}
  
  {% if section.settings.myimage %}
      <img src="{{ section.settings.myimage | img_url: "200x"}}">
  {% endif %}
  <hr>
  <div class="gallery">
  	{% for block in section.blocks %}
    <div class="gallery_item">
    	{% if block.settings.enable_gallery_img %}
      		<img src="{{ block.settings.gallery_image | img_url: "200x"}}" />
      	{% endif %}
    </div>		
    {% endfor %}
  </div>
  
</div>

{% schema %}
  {
    "name": "Gallery Section",
    "settings": [
			{
				"type" : "checkbox",
				"id":"mycheckboxid",
				"label":"Enable",
				"default":true
			},

			{
				"type" : "text",
				"id":"mysectionid",
				"label":"Enter your text",
				"default":"What is my name?"
			},
			
			{
				"type":"image_picker",
				"id":"myimage",
				"label":"Add Image"
			}
	
	 	],
	
		"blocks" : [
		   {
			"type": "gallery",		
			"name": "Gallery",
			"settings":[
				{
					"type":"checkbox",
					"id":"enable_gallery_img",
					"label":"Enable Gallery Image",
					"default":false
				},
				{
					"type":"image_picker",
					"id":"gallery_image",
					"label":"Gallery Image"
				}
			]
		  }
		],
		"presets": [
        {
          "name": "Custom Gallery",
          "category": "Custom",
          "blocks": [
            {
              "type": "gallery"
            },
            {
              "type": "gallery"
            },
            {
              "type": "gallery"
            }
          ]
        }
      ]
  }
{% endschema %}

